[
    {
        "type": "group",
        "label": {
            "en": "Power",
            "nl": "Stroom"
        },
        "collapsed": false,
        "children": [
            {
                "id": "always_on",
                "type": "checkbox",
                "label": {
                    "en": "Always on",
                    "nl": "Altijd aan"
                },
                "hint": {
                    "en": "This parameter determines if the device is always on. Once activated, will keep a connected device constantly on, will stop reacting to alarm frames and B-button push",
                    "nl": "Deze parameter bepaalt of het apparaat altijd aan is. Wanneer geactiveerd zal de plug constant aan zijn, en niet meer reageren op de B-knop en alarm frames"
                },
                "value": false
            },
            {
                "id": "save_state",
                "type": "checkbox",
                "label": {
                    "en": "Save Power-off State",
                    "nl": "Onthoud Stroom-eraf Status"
                },
                "hint": {
                    "en": "This parameter determines whether or not the device saves its last state when power is disconnected",
                    "nl": "Deze parameter bepaalt of het apparaat onthoud zijn laatste status was wanneer stroom eraf word gehaald"
                },
                "value": true
            }
        ]
    },
    {
        "type": "group",
        "label": {
            "en": "Power (W)",
            "nl": "Stroom (W)"
        },
        "collapsed": false,
        "children": [
            {
                "$extends": "reportInterval",
                "$id": "power_report_interval",
                "zwave": {
                    "index": 0,
                    "size": 0
                },
                "attr": {
                    "min": 1,
                    "max": 255
                },
                "value": 30
            },
            {
                "$extends": "reportThreshold",
                "$id": "power_report",
                "zwave": {
                    "index": 0,
                    "size": 0
                },
                "attr": {
                    "min": 1,
                    "max": 100
                },
                "value": 80
            },
            {
                "$extends": "reportIntervalThreshold",
                "$id": "power_load_report",
                "zwave": {
                    "index": 0,
                    "size": 0
                },
                "attr": {
                    "min": 1,
                    "max": 100
                },
                "value": 15
            }
        ]
    },
    {
        "type": "group",
        "label": {
            "en": "Power (kWh)",
            "nl": "Stroom (kWh)"
        },
        "collapsed": false,
        "children": [
            {
                "id": "own_power",
                "type": "checkbox",
                "label": {
                    "en": "Include own power consumption",
                    "nl": "inclusief eigen verbruik"
                },
                "hint": {
                    "en": "This parameter determines whether or not the kWh usage of the device itself is added to the power usage.",
                    "nl": "Deze parameter bepaalt of het kWh verbruik van het apparaat bij het totaal gebruikt wordt opgetelt."
                },
                "value": false
            },
            {
                "$extends": "reportThreshold",
                "$id": "kwh_report_threshold",
                "attr": {
                    "min": 0.01,
                    "max": 2.55,
                    "step": 0.01
                },
                "value": 0.1
            },
            {
                "$extends": "reportInterval",
                "$id": "watt_kwh_report_interval",
                "attr": {
                    "min": 1,
                    "max": 65535
                },
                "value": 3600
            }
        ]
    },
    {
        "type": "group",
        "label": {
            "en": "Notifications",
            "nl": "Notificaties"
